@model SmsMvc.Models.Entity.Tbl_Grade
@{
    ViewBag.Title = "NewGrade";
    Layout = "~/Views/Shared/MyLayout_.cshtml";
}

<h2>Add Grade</h2>

<form class="form-group" method="post">

    <div>
        <label>Student</label>
        @Html.DropDownListFor(m => m.Tbl_Student.StudentId, (List<SelectListItem>)ViewBag.gradeStudent_ViewBag, new { @class = "form-control" })
    </div>

    <br />

    <div>
        <label>Class</label>
        @Html.DropDownListFor(m => m.Tbl_Class.ClassId, (List<SelectListItem>)ViewBag.gradeClass_ViewBag, new { @class = "form-control" })
    </div>

    <br />

    <div>
        <label>Exam 1</label>
        @Html.TextBoxFor(m => m.Exam1, new { @class = "form-control" })
    </div>

    <br />

    <div>
        <label>Exam 2</label>
        @Html.TextBoxFor(m => m.Exam2, new { @class = "form-control" })
    </div>

    <br />

    <div>
        <label>Exam 3</label>
        @Html.TextBoxFor(m => m.Exam3, new { @class = "form-control" })
    </div>

    <br />

    <div>
        <label>Project</label>
        @Html.TextBoxFor(m => m.Project, new { @class = "form-control" })
    </div>

    <br />

    <div>
        <button class="btn btn-primary">Save</button>
    </div>

</form>