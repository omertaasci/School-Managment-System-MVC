@model SmsMvc.Models.Entity.Tbl_Class
@{
    ViewBag.Title = "NewClass";
    Layout = "~/Views/Shared/MyLayout_.cshtml";
}

<h2>Add Class</h2>

<form class="form-group" method="post">

    <div>
        <label>Id</label>
        @Html.TextBoxFor(m => m.ClassId, new { @class = "form-control", @readonly = "true" })
    </div>

    <br />

    <div>
        <label>Class Name</label>
        @Html.TextBoxFor(m => m.ClassName, new { @class = "form-control" })
    </div>

    <br />

    <div>
        <button class="btn btn-primary">Save</button>
    </div>

</form>
